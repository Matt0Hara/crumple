#!/usr/bin/env ruby
require "fileutils"
require "crumple"

options = {}

opt_parser = OptionParser.new do |opt|
  opt.banner = "Hey guys!"
  opt.separator  ""
  opt.separator  "Commands"
  opt.separator  "     Simply input a filename to export it!"
  opt.separator  ""
  opt.separator  "Options"

  opt.on("-s","--dir","set dump directory") do
    options[:set_dump_dir] = true
  end

  opt.on("-h","--help","help") do
    puts opt_parser
  end
end

opt_parser.parse!

mover = Crumple::Mover.new

if option[:set_dump_dir].nil?
  mover.target_file = ARGV[0]
  mover.dump
else
  mover.change_dump_dir
end
